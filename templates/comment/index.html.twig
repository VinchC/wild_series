{% extends 'base.html.twig' %}

{% block title %}Liste des commentaires
{% endblock %}

{% block body %}
	<h1>Liste des commentaires</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Série</th>
				<th>Episode</th>
				<th>Commentaire</th>
				<th>Note</th>
				<th>Utilisateur</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for comment in comments %}
				<tr>
					<td>{{ comment.id }}</td>
					<td>{{ comment.episode.season.program.title }}</td>
					<td>{{ comment.episode.title }}</td>
					<td>{{ comment.content }}</td>
					<td>{{ comment.rate }}</td>
					<td>{{ comment.author.firstname }}</td>
					<td>
						<a href="{{ path('app_comment_show', {'id': comment.id}) }}">Voir</a>
						<a href="{{ path('app_comment_edit', {'id': comment.id}) }}">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">Aucune valeur trouvée</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
