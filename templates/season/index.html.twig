{% extends 'base.html.twig' %}

{% block title %}Liste des saisons
{% endblock %}

{% block body %}
	<h1>Liste des saisons</h1>
	<a href="{{ path('app_season_new') }}">Créer une saison</a>

	<table class="table">
		<thead>
			<tr>
				<th>Série</th>
				<th>Id</th>
				<th>Numéro</th>
				<th>Année</th>
				<th>Description</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for season in seasons %}
				<tr>
					<td>{{ season.program.title }}</td>
					<td>{{ season.id }}</td>
					<td>{{ season.number }}</td>
					<td>{{ season.year }}</td>
					<td>{{ season.description }}</td>
					<td>
						<a href="{{ path('app_season_show', {'id': season.id}) }}">Voir</a>
						<a href="{{ path('app_season_edit', {'id': season.id}) }}">Modifier</a>
						{{ include('season/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Aucune saison trouvée</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
