{% extends 'base.html.twig' %}

{% block title %}All programs
{% endblock %}

{% block body %}
	<a href="{{ path('app_program_new') }}">Créer une série</a>
	<h1>Toutes les séries</h1>
	<table class="table">
		<thead>
			<tr>
				<th>Titre</th>
				<th>Catégorie</th>
				<th>Synopsis</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for program in programs %}
				<tr>
					<td>
						<a href="{{ path('app_program_show', { program: program.id}) }}">{{ program.title }}</a>
					</td>
					<td>{{ program.category.name }}</td>
					<td>{{ program.synopsis }}</td>
					<td>
						<a href="{{ path('app_program_show', { program: program.id }) }}">show</a>
						<a href="{{ path('app_program_edit', { 'id': program.id }) }}">edit</a>
					</td>
				</tr>
			</tbody>
		{% else %}
			<p>Aucune série trouvée</p>
		{% endfor %}
		<a href="{{ path('app_index') }}">Retour à l'accueil</a>
	{% endblock %}
