{% extends 'base.html.twig' %}

{% block title %}Liste des séries
{% endblock %}

{% block body %}
	<h1>Liste des séries</h1>
	<a href="{{ path('app_program_new') }}">Créer une série</a>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Titre</th>
				<th>Catégorie</th>
				<th>Synopsis</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for program in programs %}
				<tr>
					<td>{{ program.id }}</td>
					<td>
						<a href="{{ path('app_program_show', { slug: program.slug}) }}">{{ program.title }}</a>
					</td>
					<td>{{ program.category.name }}</td>
					<td>{{ program.synopsis }}</td>
					<td>
						<a href="{{ path('app_program_show', { slug: program.slug }) }}">Voir</a>
						<a href="{{ path('app_program_edit', { 'id': program.id }) }}">Modifier</a>
						{{ include('program/_delete_form.html.twig') }}
					</td>
				</tr>

			{% else %}
				<p>Aucune série trouvée</p>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
