<form method="post" action="{{ path('app_category_delete', {categoryName: category.id}) }}" onsubmit="return confirm('Etes-vous sûr(e) de vouloir supprimer cette catégorie ?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
	<button class="btn">Supprimer</button>
</form>
