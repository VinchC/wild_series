{% extends 'base.html.twig' %}

{% block title %}Episode
{% endblock %}

{% block body %}
	<h1>Episode</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Série</th>
				<td>{{ episode.season.program.title }}</td>
			</tr>
			<tr>
				<th>Id</th>
				<td>{{ episode.id }}</td>
			</tr>
			<tr>
				<th>Titre</th>
				<td>{{ episode.title }}</td>
			</tr>
			<tr>
				<th>Numéro</th>
				<td>{{ episode.number }}</td>
			</tr>
			<tr>
				<th>Synopsis</th>
				<td>{{ episode.synopsis }}</td>
			</tr>
			<tr>
				<th>Durée</th>
				<td>{{ episode.duration }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_episode_index') }}">Index des épisodes</a>

	<a href="{{ path('app_episode_edit', {episodeSlug: episode.slug}) }}">Modifier</a>

	{{ include('episode/_delete_form.html.twig') }}
{% endblock %}
