{% extends 'base.html.twig' %}

{% block title %}Episode index
{% endblock %}

{% block body %}
	<a href="{{ path('app_episode_new') }}">Create new</a>
	<h1>Episode index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Program</th>
				<th>Id</th>
				<th>Title</th>
				<th>Number</th>
				<th>Synopsis</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for episode in episodes %}
				<tr>
					<td>{{ episode.season.program.title }}</td>
					<td>{{ episode.id }}</td>
					<td>{{ episode.title }}</td>
					<td>{{ episode.number }}</td>
					<td>{{ episode.synopsis }}</td>
					<td>
						<a href="{{ path('app_episode_show', {'id': episode.id}) }}">show</a>
						<a href="{{ path('app_episode_edit', {'id': episode.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_index') }}">Retour Ã  l'accueil</a>

{% endblock %}
