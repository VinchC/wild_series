{% extends 'base.html.twig' %}

{% block title %}Wild Series
	{{ welcome }}
{% endblock %}

{% block body %}
	<h1>{{ welcome }}
		{% if app.user %}
			{{ app.user.firstname }}
		{% endif %}
	</h1>

	<h2>To do list</h2>

	<ul>
		<div class="p-3" style="font-size: 1.3em;">
			<span
				{{ stimulus_controller('symfony/ux-typed', {
					strings: [
						'Fetcher les données GitHub via le site directement et non les indiquer en dur',
						'Sécuriser toutes les routes',
						'Mettre des images de séries via les Fixtures',
						'Page 404 stylée',
						'Card Program avec CSS',
						'Logout auto après une durée déterminée',
						'Verify Email qui fonctionne vraiment',
					],
					loop: true,
					showCursor: true,
					cursorChar: '✨',
				}) }}
			></span>
		</div>
	</ul>

	<img src="{{ asset('build/path_to_image.png') }}" alt=""/>
	{% for program in programs %}
		{# {% for program in programs|reverse|slice(0, 3) %} #}
		<ul>
			<li>{{ program.id }}</li>
			<li><img class="align-self-start mr-3" src="{{ vich_uploader_asset(program) }}" alt="{{ program.title }} poster"></li>
			<li>
				<a href="{{ path('app_program_show', { programSlug: program.slug}) }}">{{ program.title }}</a>
			</li>
			<li>{{ program.category.name }}</li>
		</ul>
	{% endfor %}
{% endblock %}
