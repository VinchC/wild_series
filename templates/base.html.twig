<!DOCTYPE html>
<html>
	<head>
		{% set page_title = 'Wild Series' %}
		{% block head %}
			<meta charset="UTF-8">
			<meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
			<meta name="author" content="VinchC">
			<meta http-equiv="refresh" content="120">

			<title>
				{% block title %}
					{{ page_title }}
				{% endblock %}
			</title>

			{% block meta %}
				<meta name="description" content="Un site avec des séries, des saisons et des acteurs, qui sert de fil rouge pour ma progression de l'apprentissage du framework Symfony">
				<meta name="keywords" content="Séries, Acteurs, Symfony">
			{% endblock %}

			{% block robots %}
				<meta name="robots" content="index, follow">
			{% endblock %}

			{% block metaproperty %}
				<meta property="og:title" content="{{ page_title }}">
				<meta property="og:description">
				<meta property="og:type">
				<meta property="og:image">
				<meta property="og:url">
				<meta property="og:site_name">
			{% endblock %}

			<link rel="icon" href="{{ asset('./build/images/favicon.jpg') }}" alt="favicon"/>

			{% block stylesheets %}
				{{ encore_entry_link_tags('app') }}
			{% endblock %}

			{% block javascripts %}
				{{ encore_entry_script_tags('app') }}
			{% endblock %}
		{% endblock %}
	</head>

	{# <img src="{{ asset('build/path_to_image.png') }}" alt=""/> #}

	<body {{ stimulus_controller('theme') }} {{ stimulus_target('theme', 'body') }}>
		<header>
			{% block navbar %}
				{{ include('./navbar/_navbar.html.twig') }}
			{% endblock %}
		</header>
		<main>
			{# {{ app.session.get('total') }} #}
			{% for category, messages in app.flashes %}
				{% for message in messages %}
					<div class="alert alert-{{ category }}">
						{{ message }}
					</div>
				{% endfor %}
			{% endfor %}
			{% block body %}
				{% block content %}{% endblock %}
			{% endblock %}
		</main>
		{% block footer %}
			<footer>Copyrights VinchC 2024</footer>
		{% endblock %}
	</body>
</html>
