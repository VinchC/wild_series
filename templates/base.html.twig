<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Wild Series
			{% endblock %}
		</title>
		<link rel="icon" href="{{ asset('./build/images/favicon.jpg') }}" alt="favicon"/>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>

	{# <img src="{{ asset('build/path_to_image.png') }}" alt=""/> #}

	<body>
		<header>
			{% block navbar %}
				{{ include('./navbar/_navbar.html.twig') }}
			{% endblock %}
		</header>
		<main>
			{{ app.session.get('total') }}
			{% for category, messages in app.flashes %}
				{% for message in messages %}
					<div class="alert alert-{{ category }}">
						{{ message }}
					</div>
				{% endfor %}
			{% endfor %}
			{% if is_granted('IS_AUTHENTICATED_FULLY') %}
				<p>Email:
					{{ app.user.email }}</p>
			{% endif %}
			{% block body %}
				{% block content %}{% endblock %}
			{% endblock %}
			<main></body>
		</html>
	</body>
</html>
