<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Wild Series
			{% endblock %}
		</title>
		<link rel="icon" href="{{ asset('./build/images/favicon.jpg') }}" alt="favicon"/>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>

	{# <img src="{{ asset('build/path_to_image.png') }}" alt=""/> #}

	<body {{ stimulus_controller('theme') }} {{ stimulus_target('theme', 'body') }}>
		<header>
			{% block navbar %}
				{{ include('./navbar/_navbar.html.twig') }}
			{% endblock %}
		</header>

		<main>
			{# {{ app.session.get('total') }} #}
			{% for category, messages in app.flashes %}
				{% for message in messages %}
					<div class="alert alert-{{ category }}">
						{{ message }}
					</div>
				{% endfor %}
			{% endfor %}
			{% block body %}
				{% block content %}{% endblock %}
			{% endblock %}
		</main>	
		<footer {{ stimulus_controller('theme') }} {{ stimulus_target('theme', 'footer') }}>BLABLA</footer>
	</body>
</html>
